{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(google[0-9a-f]+\\.html)", "dest": "/$1" },
    { "src": "/(sitemap\\.xml|robots\\.txt)", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
    },
    {
      "source": "/:all*(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff2|ttf|json)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
